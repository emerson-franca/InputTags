{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "test-utils": ["./utils/test-utils"]
    },
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "custom.d.ts",
    "src/jest-setup.ts"
  ],
  "exclude": [
    "src/main/test/cypress"
  ],
}